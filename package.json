{
  "name": "hello-world",
  "displayName": "hello_world",
  "description": "hello world",
  "version": "0.0.1",
  "enabledProposedApi": true,
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
        {
          "command": "hello-world.helloWorld",
          "title": "Hello World",
          "category": "Hello"
        },
        {
          "command": "vscodeasy.copytoclipboard0",
          "title": "Copy to clipboard 0",
          "category": "VSCodeasy",
          "icon": {
            "light": "",
            "dark": ""
          }
        },
        {
          "command": "hello_world.worldHello",
          "title": "World Hello",
          "category": "Hello"
        }, 
        {
          "command": "hello_world.Open Whiteboard",
          "title": "Open New Whiteboard",
          "category": "Whiteboard"
        },
        {
          "command": "vscodeasy.pastefromclipboard0",
          "title": "Paste from clipboard 0",
          "category": "VSCodeasy",
          "icon": {
            "light": "",
            "dark": ""
          }
        }
        
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "myCustomSidebar",
          "title": "My Custom Sidebar",
          "icon": "./code-square.svg"
        }
      ]
    },
    "viewsWelcome": [
    {
      "view": "myCustomSidebar",
      "contents": "Open the whiteboard by clicking the button below\n [Open Whiteboard](command:hello_world.Open Whiteboard)"
    }],
    "views": {
      "myCustomSidebar": [
        {
          "id": "mySidebar",
          "name": "My Sidebar",
          "icon": "./code-square.svg"
        }
      ]
    },
    "keybindings": [
      {
        "command": "vscodeasy.copytoclipboard0",
        "key": "ctrl+alt+C 1",
        "mac": "cmd+alt+C 1",
        "when": "editorTextFocus"
      },
      {
        "command": "vscodeasy.pastefromclipboard0",
        "key": "ctrl+alt+V 1",
        "mac": "cmd+alt+V 1",
        "when": "editorTextFocus"
      },
      {
        "command": "vscodeasy.copytoclipboard1",
        "key": "ctrl+alt+C 2",
        "mac": "cmd+alt+C 2",
        "when": "editorTextFocus"
      },
      {
        "command": "vscodeasy.pastefromclipboard1",
        "key": "ctrl+alt+V 2",
        "mac": "cmd+alt+V 2",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  },

  "menus": {
    "commandPallete": [
      {
        "command": "extension.sayHello",
        "when": "editorHasSelection"
      }
    ]
  }
}
